                        var stages = [
                            {
                                title: "Диагностика",
                                list: [
                                    "Оценка степени износа и повреждений детали.",
                                    "Определение необходимого объема работ."
                                ]
                            },
                            {
                                title: "Подготовка",
                                list: [
                                    "Очистка детали от загрязнений и старого покрытия.",
                                    "Дефектовка (выявление трещин, деформаций)."
                                ]
                            },
                            {
                                title: "Расточка",
                                list: [
                                    "Механическая обработка детали для восстановления геометрии"
                                ]
                            },
                            {
                                title: "Наплавка",
                                list: [
                                    "Нанесение слоя металла на изношенные поверхности"
                                ]
                            },
                            {
                                title: "Обработка",
                                list: [
                                    "Механическая обработка наплавленного слоя до требуемых размеров.",
                                    "Шлифовка, полировка или хонингование."
                                ]
                            },
                            {
                                title: "Контроль качества",
                                list: [
                                    "Проверка размеров, формы и качества поверхности.",
                                    "Тестирование детали на соответствие техническим требованиям."
                                ]
                            },
                        ]
                    .swiper-wrapper
                        each stage, index in stages
                            .swiper-slide
                                .service-stages__item
                                    .service-stages__item-index= `0${index + 1}`
                                    .service-stages__item-title= title
                                    ul
                                        each listItem in stage.list
                                            li= listItem
                    .swiper-pagination

